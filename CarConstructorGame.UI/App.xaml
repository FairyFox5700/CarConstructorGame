<Application x:Class="CarConstructorGame.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:CarConstructorGame.UI.ViewModels"
             xmlns:views="clr-namespace:CarConstructorGame.UI.Views"
             xmlns:local="clr-namespace:CarConstructorGame.UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml"/>
                <ResourceDictionary Source="/Styles/NavigationBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
                <views:CarDetailsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                <views:LoginView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:CarDetailViewModel}">
                <views:CarDetailsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
